@model Invitation
@{
    ViewData["Title"] = "Join";
}

<h1>Invitation Registration Form</h1>

<form method="post">
    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group my-2">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group my-2">
        <label asp-for="FirstName" ></label>
        <input asp-for="FirstName" class="form-control" />

    </div>

    <div class="form-group my-2">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="form-group my-2">
        <label asp-for="Age"></label>
        <select asp-for="Age" class="form-control">
            <option value="18">18</option>
            <option value="20">20</option>
            <option value="22">22</option>
            <option value="24">24</option>
        </select>
    </div>

    <div class="form-group my-2">
        <label asp-for="Gender"></label>
        <input type="radio" asp-for="Gender" value="Erkek" checked />
        <label>Erkek</label>
        <input type="radio" asp-for="Gender" value="Kadın" />
        <label>Kadın</label>
    </div>
    <div>
        <button class="btn btn-primary" type="submit">Davet Gönder</button>
        <a class="btn btn-warning" asp-controller="Home" asp-action="Index" >Anasayfa</a>
    </div>

    

</form>