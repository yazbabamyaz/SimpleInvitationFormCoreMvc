@model IEnumerable<Invitation>
@{
    ViewData["Title"] = "Index";
}

<h1>Invitation List</h1>
@{
    if (Model.Count()<1)
    {
        <div class="alert alert-info">
            No invitations yet. Please

            <a class="alert-link" asp-action="Join"> Click</a>
            to join the invitation.
        </div>
    }
    else
    {
        <h6 class="display-6">
            Number of Participants:(@Model.Count())
        </h6>

        <table class="table table-hover table-striped">
        <thead>
        <tr>
        <th>Date</th>
        <th>FullName</th>
        <th>EMail</th>
        <th>Gender</th>
        <th>Age</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
                {
                    <tr>
                    <td>@item.ApplyDate</td>
                    <td>@item.FullName</td>
                    <td>@item.Email</td>
                    <td>@item.Gender</td>
                    <td>@item.Age</td>
                    </tr>
                }

        
        </tbody>
        </table>
    }

}


